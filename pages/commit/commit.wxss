/* pages/commit/commit.wxss */
@import "../Commen/Commen.wxss";


page{
  background: white;
  padding-bottom: 70px;
}
.commitWrap{
  margin-top: 10px;
}

.block{
  background: white;
}
.title-block{
   display: flex; 
  /* align-items: center; */

}
.title-text{
  padding-left: 8px;
}
.commit-text{
  margin-top: 10px;
  margin-bottom: 10px;
}
.user-name{
  color: #0c60aa;
}
.user-time{
  font-size: 12px;
  padding-top: 8px;
  color: rgba(150, 150, 150, 0.9);
}

.user-icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.trainer-detail{
  display: flex;
  justify-content: space-between;
  padding: 1em;
  background: #333;
  color: white;
}
.trainer-detail .title{
  font-size: 20px;
  margin-bottom: 10px;
}

.br::after{
  border-top: 1px solid rgba(150, 150, 150, 0.3);
}

.icon image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.writeWrap{
  position: fixed;
  bottom: 0px;
  background: #eee;
  width: 100%;
  padding: 5px;
  border: 1px solid rgba(150, 150, 150, 0.2);
  display: flex;
}
input{
  width: 50%;
  border-radius: 10px;
  background-color: white;
  padding-left: 5px;
  border: 1px solid rgba(150, 150, 150, 0.2);
}
.picker{
  width: 30%;
  display: flex;
  align-items: center;
  background: white;
  margin-right: 10px;
  border-radius: 10px;
  padding-left: 5px;
  border: 1px solid rgba(150, 150, 150, 0.2);
}