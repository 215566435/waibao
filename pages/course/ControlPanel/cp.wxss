.controlPanel {
  color: white;
  padding: 0.5em;
  text-align: center;
  background: #000;
}

.trainerList {
  display: flex;
  width: 100%;
  overflow: scroll;
  margin-right: 20px;
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.trainerListWrap {
  display: flex;
}

.zongheng {
  width: 80rpx;
  height: 80rpx;
  margin-left: 5px;
  border-radius: 50%;
}
.zongheng:active{
  background: #eee;
}

.select-wrap {
  display: flex;
}
.daywrap {
  margin-top: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.day{
  border-radius: 50%;
  width: 30px;
  height: 30px;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}



.weekday {
  font-size: 14px;
  margin-top: 10px;
}

.daywrap.active {
  background-color: #f5222d;
  color: white;
  border-radius: 30px;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.codeScan {
  width: 60rpx;
  height: 60rpx;
  right: 10px;
}
