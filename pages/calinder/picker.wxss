.pickerWrap {
    display: flex;
    background: #f5222d;
    position: fixed;
    bottom: 0px;
    width: 100%;
    font-size: 12px;
    color: white;
}

.pickerWrap .picker-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 44px;
    font-size: 14px;
    border-top: 1px solid rgba(120, 120, 120, 0.2);
}

#mid {
    border-left: 1px solid rgba(120, 120, 120, 0.2);
    border-right: 1px solid rgba(120, 120, 120, 0.2);
}

.book {
    text-align: center;
}

#book {
    color: white;
}