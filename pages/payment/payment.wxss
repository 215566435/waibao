/* pages/payment/payment.wxss */

page {
  background-color: black;
}

.money-block {
  position: relative;
  background: -webkit-gradient(linear, right bottom, left top, from(#fa8c16), to(#fa541c));
  margin: 16px;
  padding: 16px;
  color: white;
  border-radius: 5px;
}

.money-block.tuan {
  background: -webkit-gradient(linear, right bottom, left top, from(#f5222d), to(#cf1322));
  border: 1px solid rgba(0, 0, 255, 0.3);
}

.state-block {
  font-size: 14px;
  border-bottom: 1px solid rgba(255, 0, 0, 0.3);
  padding: 16px;
  background:-webkit-gradient(linear, right bottom, left top, from(#f5222d), to(#fa541c));
}

.title {
  font-size: 14px;
}

.money {
  font-size: 18px;
  font-weight: 900;
}

.hot {
  font-size: 10px;
  position: absolute;
  width: 55px;
  color: rgba(255, 0, 0, 0.8);
  background-color: yellow;
  border-radius: 4px;
  border: 1px solid yellow;
  right: 10px;
  top: 10px;
}
